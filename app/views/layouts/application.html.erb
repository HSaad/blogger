<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="flash">
      <%= flash.notice %>
    </p>
    <div id="container">

      <div id="nav">
        <h2>Navigation</h2>
        <%= link_to "Article List", articles_path%> <br>
        <%= link_to "Tag List", tags_path%><br>
        <%= link_to "Archive", archives_path%><br>
        <%= link_to "Most Popular", popular_articles_path%><br>
        <%= link_to "Feed", articles_path%>
      </div>

      <div id="content">
        <%= yield %>
        <hr>
        <h6>
          <% if logged_in? %>
            <%= "Logged in as #{current_user.email}" %>
            <%= link_to "(logout)", logout_path %>
          <% else %>
            <%= link_to "(login)", login_path %>
          <% end %>
        </h6>
      </div>
    </div>
  </body>
</html>
